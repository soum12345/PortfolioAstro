    <div class="text-5xl w-full font-bold mb-5">Mes compétences</div>
  </div>
  <div>
    <div class="text-3xl w-full font-bold mb-5">BUT1</div>
  </div>

  <HorizontalCard
    title="Réaliser"
    img="/post_img.webp"
    desc="Dévolopper des applications informatiques simples"
    badge="NEW"
    url="#"
