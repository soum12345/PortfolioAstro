  <HorizontalCard
    title="Administrer"
    img="/post_img.webp"
    desc="Installer et configurer un poste de travail"
    url="#"
    badge="NEW"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Gérer"
    img="/post_img.webp"
    desc="Concevoir et mettre en place une base de données à partir d'un cachier des charges client"
    url="#"
  />
